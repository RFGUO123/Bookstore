
@{
    ViewBag.Title = "忘記密碼";
}
@section styles {
    <link href="@Url.Content("~/Styles/Forget_Password_index.css")" rel="stylesheet" type="text/css" />
}
@if (ViewBag.success != null)
{
    <h2>@ViewBag.success</h2>
}
else
{
    <div class="container offset-md-4 col-md-4">
        <div class="row">
            <span class="col" style="font-size: 140%; font-weight: bolder; margin: 0px; border: 0px; padding: 0px ">寄送重設密碼通知</span>
            <span style="font-size: 90%; margin:0px; border:0px ; padding:0px" class="col text-end align-self-end"><a href="/Member/Login">返回登入頁面</a></span>
        </div>
        <br />
    </div>
    <form action="@Url.Action("Forget_Password","Member")" method="Post">
        <div class="container offset-md-4 col-md-4" style="background-color: white; border-radius: 5px ">
            <div>
                <br />
                <div class="form-group">
                    <div class="row">
                        <div class="control-label">會員帳號 : </div>
                    </div>
                    <div class="row">
                        <div style="position: relative; top: 10px;"><input style="width:100%;max-width:unset;" type="text" id="UserId" name="UserId" required class="form-control"></div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col">
                        <input type="submit" value="確認送出" class="btn btn-primary submit-btn" style="width: 100%; max-width: unset; background-color: orangered; border: none">
                        <p class="text-danger">@ViewBag.Error</p>
                    </div>
                </div>
            </div>
        </div>
    </form>
}

@if (ViewBag.Error != null)
{
    <script>alert('請輸入正確帳號')</script>
}


@if (ViewBag.drop != null)
{
    <script>alert('發生預期外的錯誤，請重新送出申請或稍後再試')</script>
}
